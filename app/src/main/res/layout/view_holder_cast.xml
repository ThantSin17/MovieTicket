<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCast"
        android:layout_width="@dimen/width_cast_item"
        android:layout_height="@dimen/width_cast_item"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundImageView"
        app:srcCompat="@drawable/america" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCast"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Millie Bobby Brown"
        android:layout_alignStart="@id/ivCast"
        android:layout_alignEnd="@id/ivCast"
        android:textAlignment="center"
        android:textSize="@dimen/text_smaller"
        android:fontFamily="@font/montserrat_light"/>
</RelativeLayout>