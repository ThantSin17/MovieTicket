<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlRegister"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_large"
    tools:context=".ui.fragment.LoginFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEmailText"
        android:text="@string/lbl_email"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/secondaryTextBlack30Color"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmailText"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium"
        android:paddingBottom="20dp"
        android:textSize="@dimen/text_regular_2x" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPasswordText"
        android:text="@string/lbl_password"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_below="@id/editEmail"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/secondaryTextBlack30Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPasswordText"
        android:includeFontPadding="true"
        android:inputType="textPassword"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium_2"
        android:paddingBottom="20dp"
        android:textSize="@dimen/text_regular_2x" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNameLabel"
        android:text="@string/lbl_name"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_below="@id/editPassword"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/secondaryTextBlack30Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameLabel"
        android:includeFontPadding="true"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium_2"
        android:paddingBottom="20dp"
        android:textSize="@dimen/text_regular_2x" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPhoneNumberLabel"
        android:text="Phone Number"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_below="@id/editName"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:textSize="@dimen/text_regular"
        android:textColor="@color/secondaryTextBlack30Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhoneNumberLabel"
        android:includeFontPadding="true"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium_2"
        android:inputType="phone"
        android:paddingBottom="20dp"
        android:textSize="@dimen/text_regular_2x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPhone"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/lbl_already_account"
        android:textColor="@color/secondaryTextBlack30Color"
        android:textSize="@dimen/text_regular" />

    <include
        layout="@layout/view_pod_login_btn"
        android:id="@+id/vpRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGoLogin" />
</RelativeLayout>